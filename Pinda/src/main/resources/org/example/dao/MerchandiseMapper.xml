<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:????-->
<mapper namespace="org.example.dao.MerchandiseMapper">

    <!--
    id:resultMap??????
    type:resultMap???????
    -->

    <insert id="insert">
        insert into merchandise (order_id,kind,weight,arrive_transfer_time,start_time,final_time,present_location,present_state)values(#{order_id},#{kind},#{weight},#{arrive_transfer_time},#{start_time},#{final_time},#{present_location},#{present_state})
    </insert>
    <delete id="delete">
        delete from merchandise where order_id = #{order_id}
    </delete>
    <update id="update">
        update merchandise set kind = #{kind},weight = #{weight},arrive_transfer_time = #{arrive_transfer_time},start_time = #{start_time},final_time = #{final_time},present_location = #{present_location},present_state = #{present_state} where order_id = #{order_id}
    </update>
    <select id="findall" resultType="org.example.pojo.Merchandise">
        select * from merchandise
    </select>
    <select id="findMerchandisebykindandstate" resultType="org.example.pojo.Merchandise">
        select * from merchandise where kind like #{kind} and present_state = #{present_state}
    </select>

</mapper>