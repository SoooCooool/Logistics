<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:????-->
<mapper namespace="org.example.dao.MerchandiseMapper">

    <!--
    id:resultMap??????
    type:resultMap???????
    -->

    <insert id="insert">
        insert into merchandise (orderid,kind,weight,arrivetransfertime,starttime,finaltime,presentlocation,presentstate)values(#{orderid},#{kind},#{weight},#{arrivetransfertime},#{starttime},#{finaltime},#{presentlocation},#{presentstate})
    </insert>
    <delete id="delete">
        delete from merchandise where order_id = #{order_id}
    </delete>
    <update id="update">
        update merchandise set kind = #{kind},weight = #{weight},arrivetransfertime = #{arrivetransfertime},starttime = #{starttime},finaltime = #{finaltime},presentlocation = #{present_location},presentstate = #{presentstate} where orderid = #{orderid}
    </update>
    <select id="findall" resultType="org.example.pojo.Merchandise">
        select * from merchandise
    </select>
    <select id="findbyid" resultType="org.example.pojo.Merchandise">
        select * from merchandise where orderid = #{orderid}
    </select>
    <select id="findMerchandisebykindandstate" resultType="org.example.pojo.Merchandise">
        select * from merchandise where kind like #{kind} and presentstate = #{presentstate}
    </select>

</mapper>